# ============================================
# Environment Configuration Template - DefVault
# ============================================
# Copy this to .env and fill in your values
# This file documents all required environment variables for the DefVault application

# ============================================
# SERVER CONFIGURATION
# ============================================
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:5173
APP_VERSION=1.0.0

# ============================================
# DATABASE CONFIGURATION
# ============================================
# PostgreSQL Database (Direct connection)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=defvault
DB_USER=postgres
DB_PASSWORD=your_secure_password_here

# Alternative: PostgreSQL Connection URL
# Uncomment if using connection string instead of individual values
# DATABASE_URL=postgresql://postgres:your_password@localhost:5432/defvault

# ============================================
# REDIS CONFIGURATION (Caching & Session Store)
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
# Redis is used for token caching, session storage, and task queues

# ============================================
# JWT & SESSION CONFIGURATION
# ============================================
JWT_SECRET=your_jwt_secret_key_here_min_32_characters
SESSION_SECRET=your_session_secret_key_here_min_32_characters
JWT_EXPIRY=24h
# Note: JWT_PRIVATE_KEY and JWT_PUBLIC_KEY are auto-generated if not provided
JWT_PRIVATE_KEY=
JWT_PUBLIC_KEY=

# ============================================
# GOOGLE API CONFIGURATION
# ============================================
# Google Safe Browsing API - for checking URLs against Google's threat database
GOOGLE_API_KEY=your_google_api_key_here

# Google OAuth2 for Safe Browsing client identification
GOOGLE_CLIENT_ID=your_google_client_id_here

# ============================================
# VIRUSTOTAL CONFIGURATION
# ============================================
# VirusTotal API Key - for malware and threat detection
# Get your API key from: https://www.virustotal.com/gui/my-apikey
VIRUSTOTAL_API_KEY=your_virustotal_api_key_here

# ============================================
# GMAIL OAUTH CONFIGURATION (Personal Module)
# ============================================
# Gmail OAuth2 credentials for email scanning
# Create OAuth2 credentials at: https://console.cloud.google.com/
GMAIL_CLIENT_ID=your_gmail_client_id_here
GMAIL_CLIENT_SECRET=your_gmail_client_secret_here
GMAIL_CALLBACK_URL=http://localhost:3000/api/auth/gmail/callback
# Note: Gmail tokens are securely stored in Redis with 30-day TTL

# ============================================
# LOGGING CONFIGURATION
# ============================================
LOG_LEVEL=debug
# Valid levels: error, warn, info, debug, verbose, silly
# Production: use 'info' or 'warn'
# Development: use 'debug'
