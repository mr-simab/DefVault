# Environment Configuration Template
# Copy this to .env and fill in your values

# Server
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:5173

# Supabase / Database (Supabase Postgres)
# Set `DATABASE_URL` to your Supabase Postgres connection string (postgresql://...)
DATABASE_URL=postgresql://user:password@db.supabase.co:5432/postgres

# Supabase project (optional, used by frontend or supabase-js)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here  # backend only
SUPABASE_ANON_KEY=your_anon_key_here                  # frontend (if used)

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT
JWT_SECRET=your_jwt_secret_key_here
SESSION_SECRET=your_session_secret_here
JWT_EXPIRY=24h

# Google Safe Browsing
GOOGLE_API_KEY=your_google_api_key

# VirusTotal
VIRUSTOTAL_API_KEY=your_virustotal_api_key

# Logging
LOG_LEVEL=debug
LOG_FILE=logs/app.log
